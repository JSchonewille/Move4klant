<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#58ADFE"
        android:orientation="vertical">

        <!-- Title layout -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dip"
            android:layout_weight="30">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welkom bij de"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="24dp"
                android:layout_marginTop="20dp"
                android:id="@+id/tfWelkomBijDe" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IJzerwinkel app"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="46dp"
                android:id="@+id/tfIJzerwinkelApp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/sign_up"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

        </LinearLayout>
        <!-- Title layout -->

        <!-- Registration Form -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dip"
            android:layout_weight="20">

                <!-- Full Name Label -->

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/fname"
                        android:hint="Voornaam"
                        android:textColor="#000000"
                        android:layout_alignParentRight="true"
                        android:textSize="15dp"
                        android:layout_below="@+id/t1"
                        android:padding="5dp"
                        android:background="@drawable/textfield"
                        android:textColorHint="#CCCCCC" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:id="@+id/lname"
                        android:hint="Achternaam"
                        android:layout_alignParentRight="true"
                        android:textSize="15dp"
                        android:layout_below="@+id/t1"
                        android:background="@drawable/textfield"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:textColorHint="#CCCCCC" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/email"
                        android:hint="E-mailadres"
                        android:layout_below="@+id/lname"
                        android:layout_alignParentRight="true"
                        android:textSize="15dp"
                        android:background="@drawable/textfield"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:textColorHint="#CCCCCC" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/pword"
                        android:hint="Wachtwoord"
                        android:layout_below="@+id/email"
                        android:layout_alignParentRight="true"
                        android:textSize="15dp"
                        android:background="@drawable/textfield"
                        android:layout_marginTop="10dp"
                        android:textIsSelectable="false"
                        android:padding="5dp"
                        android:textColorHint="#CCCCCC" />

                <!-- Register Button -->
                <Button android:id="@+id/btnRegister"
                    android:layout_width="fill_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dip"
                    android:text="Registreer"
                    android:background="@drawable/button_rounded_corners"
                    android:radius="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:singleLine="false" />

                <!-- Link to Login Screen -->
                <TextView android:id="@+id/link_to_login"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:text="Terug naar het inlogscherm"
                    android:gravity="center"
                    android:textSize="18dip"
                    android:textColor="#fff"/>
        </LinearLayout>
        <!-- Registration Form Ends -->

    </LinearLayout>